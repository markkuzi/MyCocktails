<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.fragments.cocktaildetails.CocktailDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/details_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toTopOf="parent" />

        <ru.markkuzi.mycocktails.presentation.customviews.BottomButtonsView
            android:id="@+id/bottomButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:paddingBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/details_rv"
            app:bottomPositiveButtonText="@string/edit_button"
            app:bottomNegativeButtonText="@string/delete_button" />


    </androidx.constraintlayout.widget.ConstraintLayout>




</ScrollView>